    <script>
        // Like button functionality
        document.querySelectorAll('.like-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const icon = this.querySelector('i');
                const count = this.querySelector('span');
                
                if (icon.classList.contains('far')) {
                    icon.classList.remove('far');
                    icon.classList.add('fas', 'text-red-500');
                    icon.classList.add('like-animation');
                    count.textContent = parseInt(count.textContent) + 1;
                } else {
                    icon.classList.remove('fas', 'text-red-500');
                    icon.classList.add('far');
                    icon.classList.remove('like-animation');
                    count.textContent = parseInt(count.textContent) - 1;
                }
                
                setTimeout(() => {
                    icon.classList.remove('like-animation');
                }, 300);
            });
        });

        // Follow button functionality
        document.querySelectorAll('button').forEach(btn => {
            if (btn.textContent.includes('ÿØŸÜÿ®ÿßŸÑ ⁄©ÿ±ÿØŸÜ')) {
                btn.addEventListener('click', function() {
                    if (this.textContent === 'ÿØŸÜÿ®ÿßŸÑ ⁄©ÿ±ÿØŸÜ') {
                        this.textContent = 'ÿØŸÜÿ®ÿßŸÑ ÿ¥ÿØŸá';
                        this.classList.remove('text-blue-500', 'hover:text-blue-600');
                        this.classList.add('text-gray-500', 'hover:text-gray-600');
                    } else {
                        this.textContent = 'ÿØŸÜÿ®ÿßŸÑ ⁄©ÿ±ÿØŸÜ';
                        this.classList.remove('text-gray-500', 'hover:text-gray-600');
                        this.classList.add('text-blue-500', 'hover:text-blue-600');
                    }
                });
            }
        });

        // Floating action button
        document.querySelector('.floating-action').addEventListener('click', function() {
            alert('ŸÇÿßÿ®ŸÑ€åÿ™ ÿ¢ŸæŸÑŸàÿØ Ÿæÿ≥ÿ™ ÿ®Ÿá ÿ≤ŸàÿØ€å ÿßÿ∂ÿßŸÅŸá ŸÖ€å‚Äåÿ¥ŸàÿØ!');
        });

        // Search functionality
        document.querySelector('input[type="text"]').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                alert('ÿ¨ÿ≥ÿ™ÿ¨Ÿà ÿ®ÿ±ÿß€å: ' + this.value);
            }
        });
    </script>
